{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Battle UI Configuration - Controls client-side battle UI behavior including progress bars, polling, and animations",
  
  "progressBar": {
    "description": "Progress bar behavior configuration",
    "enableCycling": true,
    "cyclingBehavior": {
      "description": "When progress reaches 100%, continue cycling using last measured interval",
      "enabled": true,
      "minIntervalSeconds": 0.1,
      "maxIntervalSeconds": 100.0,
      "resetOnServerUpdate": true
    }
  },
  
  "polling": {
    "description": "Polling strategy configuration",
    "step": {
      "description": "Step battle polling settings",
      "normalIntervalMs": 500,
      "slowIntervalMs": 2000,
      "fastIntervalMs": 200,
      "minIntervalMs": 100,
      "maxIntervalMs": 5000
    },
    "plan": {
      "description": "Plan battle polling settings",
      "normalIntervalMs": 2000,
      "slowIntervalMs": 5000,
      "fastIntervalMs": 500,
      "minIntervalMs": 200,
      "maxIntervalMs": 10000
    },
    "adaptive": {
      "description": "JIT (Just-in-time) adaptive polling configuration",
      "enabled": true,
      "triggerLeadTimeMs": 150,
      "minLeadTimeMs": 50,
      "maxLeadTimeMs": 500,
      "cooldownAfterTriggerMs": 300,
      "maxJitPollsPerSecond": 5
    }
  },
  
  "animation": {
    "description": "Animation and transition settings",
    "progressBarUpdateIntervalMs": 100,
    "hpBarTransition": {
      "enabled": true,
      "durationMs": 120,
      "timingFunction": "linear",
      "delayMs": 0
    },
    "attackProgressTransition": {
      "enabled": true,
      "durationMs": 100,
      "timingFunction": "linear"
    }
  },
  
  "debug": {
    "description": "Debug and diagnostic settings",
    "enableLogging": false,
    "logProgressCalculations": false,
    "logPollingEvents": false,
    "logJitPolls": false,
    "showDebugOverlay": false
  },
  
  "experimental": {
    "description": "Experimental features (use with caution)",
    "predictiveProgressBar": false,
    "serverTimeSync": false,
    "interpolationSmoothing": 1.0
  }
}
