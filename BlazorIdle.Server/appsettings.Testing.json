{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=:memory:"
  },
  "Economy": {
    "DefaultDropMode": "expected"
  },
  "Combat": {
    "EnablePeriodicRewards": false,
    "RewardFlushIntervalSeconds": 1.0
  },
  "Offline": {
    "OfflineDetectionSeconds": 10,
    "MaxOfflineSeconds": 3600,
    "AutoApplyRewards": true
  },
  "Jwt": {
    "SecretKey": "TestSecretKey-OnlyForTesting-32Chars",
    "Issuer": "BlazorIdle.Server.Test",
    "Audience": "BlazorIdle.Client.Test",
    "ExpirationMinutes": 60
  },
  "Shop": {
    "EnableCaching": false,
    "ShopDefinitionCacheMinutes": 0,
    "ShopItemsCacheMinutes": 0,
    "ConfigPath": "Config/Shop",
    "ShopDefinitionsFile": "ShopDefinitions.json",
    "ShopItemsFile": "ShopItems.json",
    "DefaultRefreshIntervalSeconds": 60,
    "MaxShopNameLength": 50,
    "MaxShopDescriptionLength": 200,
    "MaxItemNameLength": 100,
    "MaxItemDescriptionLength": 500,
    "UnlimitedStock": -1,
    "DailyResetSeconds": 86400,
    "WeeklyResetSeconds": 604800,
    "DefaultDailyLimit": 10,
    "DefaultWeeklyLimit": 5,
    "MinPriceAmount": 1,
    "MaxPriceAmount": 1000000,
    "MinLevelRequirement": 1,
    "MaxLevelRequirement": 100,
    "MinPurchaseQuantity": 1,
    "MaxPurchaseQuantity": 999,
    "DefaultPageSize": 10,
    "MaxPageSize": 50,
    "PurchaseHistoryDefaultDays": 7
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "BlazorIdle.Server.Application.Shop": "Information",
      "BlazorIdle.Server.Domain.Shop": "Information",
      "BlazorIdle.Server.Application.Economy": "Warning",
      "BlazorIdle.Server.Application.Battles": "Warning"
    }
  }
}
