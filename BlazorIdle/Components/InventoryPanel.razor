@using BlazorIdle.Client.Services
@inject ApiClient Api

<div class="inventory-panel">
    <h5>背包 - @CharacterName</h5>
    
    @if (isLoading)
    {
        <p><em>加载中...</em></p>
    }
    else if (error is not null)
    {
        <div class="alert alert-danger">@error</div>
    }
    else if (inventory is not null)
    {
        <div class="inventory-summary">
            <div class="stat-item">
                <strong>金币:</strong> <span class="gold-text">@inventory.Gold.ToString("N0")</span>
            </div>
            <div class="stat-item">
                <strong>经验:</strong> <span class="exp-text">@inventory.Experience.ToString("N0")</span>
            </div>
        </div>

        @if (inventory.Items.Count == 0)
        {
            <p class="text-muted">背包为空</p>
        }
        else
        {
            <table class="table table-sm table-striped inventory-table">
                <thead>
                    <tr>
                        <th>物品ID</th>
                        <th>数量</th>
                        <th>更新时间</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in inventory.Items)
                    {
                        <tr>
                            <td>
                                <span class="item-id">@GetItemDisplayName(item.ItemId)</span>
                            </td>
                            <td class="text-end">
                                <strong>@item.Quantity</strong>
                            </td>
                            <td class="text-muted">
                                <small>@item.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</small>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <div class="inventory-actions">
            <button class="btn btn-sm btn-outline-primary" @onclick="LoadInventoryAsync" disabled="@isLoading">
                <span class="oi oi-reload"></span> 刷新
            </button>
        </div>
    }
</div>

@code {
    [Parameter]
    public Guid CharacterId { get; set; }

    [Parameter]
    public string CharacterName { get; set; } = "";

    private InventoryResponse? inventory;
    private bool isLoading;
    private string? error;

    protected override async Task OnParametersSetAsync()
    {
        if (CharacterId != Guid.Empty)
        {
            await LoadInventoryAsync();
        }
    }

    private async Task LoadInventoryAsync()
    {
        if (CharacterId == Guid.Empty) return;

        isLoading = true;
        error = null;
        try
        {
            inventory = await Api.GetInventoryAsync(CharacterId);
            if (inventory is not null)
            {
                CharacterName = inventory.CharacterName;
            }
        }
        catch (Exception ex)
        {
            error = $"加载背包失败: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private static string GetItemDisplayName(string itemId)
    {
        // 简单的物品名称映射，后续可以从配置或注册表读取
        return itemId switch
        {
            "mat_scrap" => "碎片 (Scrap)",
            "mat_core" => "核心 (Core)",
            "gem_small" => "小宝石 (Small Gem)",
            _ => itemId
        };
    }
}

